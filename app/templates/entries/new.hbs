<div class="form-horizontal form-group row">
  <div class="form-group">
    <label class="col-sm-2 control-label">First Name</label>
    <div class="col-sm-10">
      {{input
        autofocus="autofocus"
        type="text"
        value=model.firstName
        class="form-control"
        placeholder="Your first name"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Last name</label>
    <div class="col-sm-10">
      {{input
        type="text"
        value=model.lastName
        class="form-control"
        placeholder="Your last name"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Age</label>
    <div class="col-sm-10">
      {{input
        type="text"
        value=model.age
        class="form-control"
        placeholder="Your age"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Bust</label>
    <div class="col-sm-10">
      {{input
        type="text"
        value=model.bust
        class="form-control"
        placeholder="Your bust"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Waist</label>
    <div class="col-sm-10">
      {{input
        type="text"
        value=model.waist
        class="form-control"
        placeholder="Your waist"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Hip</label>
    <div class="col-sm-10">
      {{input
        type="text"
        value=model.hip
        class="form-control"
        placeholder="Your hip"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Adress</label>
    <div class="col-sm-10">
      {{input
        type="text"
        value=model.address
        class="form-control"
        placeholder="Your adress"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">E-mail</label>
    <div class="col-sm-10">
      {{input
        type="text"
        value=model.email
        class="form-control"
        placeholder="Your e-mail"}}
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button
        type="submit"
        class="btn btn-default"
        {{action 'saveEntry' model}}>
        Add to Entry list
      </button>
    </div>
  </div>
</div>
